# PolicyPulse 前端环境变量配置
# 路径: /mnt/okcomputer/output/frontend/.env.example

# 基础配置
NODE_ENV=development
PORT=3000

# API配置
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# 应用信息
NEXT_PUBLIC_APP_NAME=PolicyPulse
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_DESCRIPTION=基于AI的政策和招标信息智能分析SaaS平台

# 功能开关
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_SENTRY=false
NEXT_PUBLIC_ENABLE_PWA=true

# 第三方服务
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_HOTJAR_ID=

# 支付配置
NEXT_PUBLIC_WECHAT_PAY_ENABLED=false

# 功能限制
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_MAX_FILES_COUNT=5

# 缓存配置
NEXT_PUBLIC_CACHE_TTL=3600

# 监控配置
NEXT_PUBLIC_ENABLE_MONITORING=false