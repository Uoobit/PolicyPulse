# ==========================================
# 邮件服务配置
# ==========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@policypulse.com

# ==========================================
# 短信服务配置 (阿里云短信)
# ==========================================
SMS_ACCESS_KEY=your-alibaba-access-key
SMS_SECRET_KEY=your-alibaba-secret-key
SMS_REGION=cn-north-1
SMS_SIGN_NAME=PolicyPulse
SMS_TEMPLATE_CODE=SMS_123456789

# ==========================================
# 支付配置 (微信支付)
# ==========================================
WECHAT_APP_ID=your-wechat-app-id
WECHAT_MCH_ID=your-wechat-merchant-id
WECHAT_KEY=your-wechat-api-key

# ==========================================
# 采集配置
# ==========================================
CRAWL_DELAY=3
CRAWL_TIMEOUT=30
MAX_RETRY_COUNT=3

# ==========================================
# 通知配置
# ==========================================
NOTIFICATION_RETRY_COUNT=3
NOTIFICATION_RETRY_DELAY=60

# ==========================================
# CORS 配置
# ==========================================
ALLOWED_ORIGINS=http://localhost:3000,https://policypulse.com

# ==========================================
# 日志配置
# ==========================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ==========================================
# 前端配置
# ==========================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=PolicyPulse
NEXT_PUBLIC_APP_VERSION=1.0.0

# ==========================================
# MongoDB 初始化配置
# ==========================================
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=password
MONGO_DATABASE=policypulse